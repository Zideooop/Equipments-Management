/* 页面容器 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  font-size: 28rpx;
}

/* 用户信息头部 */
.user-header {
  background-color: white;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.user-avatar-container {
  margin-right: 30rpx;
}

.avatar-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #f0f2f5;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-main-info {
  margin-bottom: 15rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-right: 15rpx;
}

.user-role {
  display: inline-block;
  background-color: #e8f3ff;
  color: #1677ff;
  font-size: 24rpx;
  padding: 3rpx 15rpx;
  border-radius: 20rpx;
  vertical-align: middle;
}

.user-actions {
  display: flex;
  gap: 15rpx;
}

.login-btn {
  background-color: #1677ff;
  color: white;
  padding: 8rpx 25rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  line-height: 1.4;
}

.edit-btn {
  background-color: #f0f2f5;
  color: #333;
  padding: 8rpx 25rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  line-height: 1.4;
}

.logout-btn {
  background-color: #fff1f0;
  color: #f53f3f;
  padding: 8rpx 25rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  line-height: 1.4;
}

/* 菜单区域 */
.menu-section {
  margin: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  padding: 30rpx 30rpx 15rpx;
  color: #86909c;
  font-size: 26rpx;
}

/* 菜单网格布局 */
.menu-grid {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #f2f3f5;
}

/* 菜单项样式 */
.menu-item {
  width: 33.333%;
  padding: 35rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-right: 1rpx solid #f2f3f5;
  border-bottom: 1rpx solid #f2f3f5;
  box-sizing: border-box;
}

/* 去除右侧边框 */
.menu-item:nth-child(3n) {
  border-right: none;
}

/* 菜单项点击效果 */
.menu-item:active {
  background-color: #f5f7fa;
}

.menu-icon {
  margin-bottom: 15rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
  background-color: rgba(22, 119, 255, 0.1);
}

/* 不同图标背景色 */
.menu-item:nth-child(2) .menu-icon {
  background-color: rgba(255, 125, 0, 0.1);
}

.menu-item:nth-child(3) .menu-icon {
  background-color: rgba(0, 180, 42, 0.1);
}

.menu-item:nth-child(4) .menu-icon {
  background-color: rgba(245, 63, 63, 0.1);
}

.menu-item:nth-child(5) .menu-icon {
  background-color: rgba(114, 46, 209, 0.1);
}

.menu-item:nth-child(6) .menu-icon {
  background-color: rgba(134, 144, 156, 0.1);
}

.menu-text {
  color: #333;
  font-size: 28rpx;
  text-align: center;
}

.menu-subtext {
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  color: #86909c;
  font-size: 22rpx;
}

/* 消息徽章 */
.badge {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #f53f3f;
  color: white;
  border-radius: 50%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部区域 */
.footer {
  margin-top: 50rpx;
  padding: 30rpx 0;
  text-align: center;
}

.copyright {
  color: #86909c;
  font-size: 24rpx;
}
