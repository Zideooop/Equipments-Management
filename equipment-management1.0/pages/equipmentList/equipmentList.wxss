/* 全局样式 */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 搜索栏样式 */
.search-bar {
  padding: 15rpx 20rpx;
  background-color: white;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 60rpx;
  padding: 0 25rpx;
  height: 80rpx;
}

.search-input .iconfont {
  font-size: 32rpx;
  color: #999;
  margin-right: 15rpx;
}

.search-input input {
  flex: 1;
  font-size: 30rpx;
  height: 100%;
}

.clear-btn {
  font-size: 30rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 筛选区域样式 */
.filters {
  background-color: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.filter-section {
  margin-bottom: 20rpx;
}

.filter-section:last-child {
  margin-bottom: 0;
}

.filter-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-tag {
  padding: 10rpx 25rpx;
  background-color: #f5f7fa;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
}

.filter-tag.active {
  background-color: #1677ff;
  color: white;
}

/* 已选筛选条件 */
.selected-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding: 15rpx 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
  align-items: center;
}

.filter-chip {
  display: flex;
  align-items: center;
  background-color: #e8f3ff;
  color: #1677ff;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.close-icon {
  margin-left: 10rpx;
  font-size: 24rpx;
  width: 24rpx;
  height: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.clear-all {
  color: #999;
  font-size: 26rpx;
  margin-left: auto;
}

/* 器材列表样式 */
.equipment-list {
  padding: 15rpx;
}

.equipment-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.item-status {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-in {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.status-out {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.item-details {
  margin-bottom: 20rpx;
}

.detail-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.item-footer {
  border-top: 1rpx dashed #eee;
  padding-top: 15rpx;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-btn {
  background-color: #1677ff;
  color: white;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.spinner {
  width: 50rpx;
  height: 50rpx;
  border: 5rpx solid rgba(22, 119, 255, 0.1);
  border-radius: 50%;
  border-top-color: #1677ff;
  animation: spin 1s ease-in-out infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
    