.account-login-container {
  min-height: 100vh;
  background-color: #f5f7fa;
}

.nav-bar {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  font-size: 32rpx;
  color: #333;
  margin-right: 30rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.login-form {
  padding: 60rpx 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 0 30rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #eee;
}

.form-item .icon {
  font-size: 32rpx;
  color: #1677ff;
  margin-right: 20rpx;
}

.form-item input {
  flex: 1;
  font-size: 32rpx;
  height: 100%;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 50rpx;
  margin-top: 40rpx;
}

.form-links {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.link {
  font-size: 28rpx;
  color: #1677ff;
}
    