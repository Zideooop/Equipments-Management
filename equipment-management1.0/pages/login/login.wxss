.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 30rpx;
}

.login-header {
  padding: 150rpx 0 80rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 微信登录区域 */
.wechat-login-section {
  margin-bottom: 60rpx;
}

.wechat-login-btn {
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  padding: 25rpx 0;
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.auth-desc {
  font-size: 24rpx;
  color: #86909c;
  text-align: center;
  display: block;
}

/* 分割线 */
.divider {
  text-align: center;
  font-size: 26rpx;
  color: #999;
  padding: 20rpx 0;
  position: relative;
  margin-bottom: 40rpx;
}

.divider::before, .divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1px;
  background-color: #ddd;
}

.divider::before {
  left: 0;
}

.divider::after {
  right: 0;
}

/* 表单样式 */
.login-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.input-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 80rpx;
  padding: 0 30rpx;
  height: 90rpx;
  gap: 20rpx;
}

.icon {
  font-size: 36rpx;
  color: #86909c;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.toggle-btn {
  color: #999;
  font-size: 36rpx;
}

.login-btn {
  background-color: #1677ff;
  color: white;
  font-size: 32rpx;
  padding: 25rpx 0;
  border-radius: 80rpx;
  margin-top: 20rpx;
}
