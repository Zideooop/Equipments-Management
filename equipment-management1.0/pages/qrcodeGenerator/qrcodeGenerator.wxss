/* 二维码生成页面样式 */
.container {
  padding: var(--spacing-md);
  background-color: var(--bg-color);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: var(--spacing-sm) 0 var(--spacing-md);
  color: var(--text-primary);
  text-align: center;
}

/* 输入区域样式 */
.input-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
}

.input {
  width: 100%;
  min-height: 140rpx;
  background-color: white;
  border-radius: var(--border-radius);
  padding: var(--spacing-sm);
  font-size: 28rpx;
  border: 1rpx solid var(--border-color);
  line-height: 1.6;
  transition: all 0.2s ease;
}

.input-error {
  border-color: var(--danger-color);
}

/* 错误提示 */
.error-message {
  color: var(--danger-color);
  font-size: 24rpx;
  margin-top: var(--spacing-xs);
  padding-left: var(--spacing-xs);
  display: flex;
  align-items: center;
}

/* 错误抖动动画 */
.shake {
  animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
}

@keyframes shake {
  10%, 90% { transform: translateX(-2rpx); }
  20%, 80% { transform: translateX(4rpx); }
  30%, 50%, 70% { transform: translateX(-6rpx); }
  40%, 60% { transform: translateX(6rpx); }
}

/* 控制选项样式 */
.control-item {
  margin-bottom: var(--spacing-md);
}

.control-item:last-child {
  margin-bottom: 0;
}

.control-label {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.picker-view {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 0 var(--spacing-sm);
  font-size: 26rpx;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.generate-btn {
  flex: 2;
}

.clear-btn {
  flex: 1;
}

/* 二维码显示区域 */
.qrcode-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  margin: var(--spacing-sm) 0;
  width: 100%;
}

.qrcode-wrapper {
  background-color: white;
  padding: var(--spacing-md);
  border-radius: var(--border-radius-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: var(--shadow);
}

.qrcode-canvas {
  border: 1rpx solid #eee;
}

.qrcode-content {
  margin-top: var(--spacing-sm);
  font-size: 26rpx;
  color: var(--text-secondary);
  word-break: break-all;
  max-width: 100%;
  text-align: center;
  padding: var(--spacing-xs);
}

.action-buttons {
  display: flex;
  gap: var(--spacing-sm);
  width: 100%;
  margin-top: var(--spacing-sm);
}

.save-btn, .scan-btn {
  flex: 1;
}

/* 历史记录样式 */
.history-section {
  width: 100%;
  margin-top: var(--spacing-md);
  background-color: white;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  box-shadow: var(--shadow);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.history-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.clear-history {
  font-size: 24rpx;
  color: var(--primary-color);
}

.clear-history:active {
  color: #0e68e0;
}

.history-list {
  max-height: 300rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xs) var(--spacing-xs);
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.history-item:active {
  background-color: rgba(22, 119, 255, 0.05);
}

.history-item:last-child {
  border-bottom: none;
}

/* 提示信息 */
.tips {
  margin-top: auto;
  margin-bottom: var(--spacing-md);
  color: var(--text-tertiary);
  font-size: 24rpx;
  text-align: center;
  padding: 0 var(--spacing-sm);
}
