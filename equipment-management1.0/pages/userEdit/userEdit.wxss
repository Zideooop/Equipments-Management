.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.form-container {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #666;
}

.input {
  flex: 1;
  font-size: 30rpx;
  padding: 10rpx 0;
}

.avatar-container {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eee;
}

.change-avatar-btn {
  background-color: #1677ff;
  color: white;
}

.save-btn {
  margin-top: 50rpx;
  background-color: #1677ff;
  color: white;
  font-size: 32rpx;
  padding: 25rpx 0;
  border-radius: 80rpx;
}
